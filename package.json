    "@types/node": "14.6.4",
    "eslint": "7.8.1",
    "eslint-config-carnesen": "4.6.0",
    "jest": "26.4.2",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  },
